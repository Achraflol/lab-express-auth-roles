<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Editar rol {{username}}</h1>
            <hr>

            <form action="/students/edit-auth/{{id}}" method="POST">
                <div class="form-group">
                    <label for="rol">ROL</label>
                    <input type="text" class="form-control" id="role" name="role" value="{{role}}">

                    <button type="submit" class="btn btn-dark btn-block">Editar rol</button>
                </div>

            </form>
        </div>
    </div>
</div>